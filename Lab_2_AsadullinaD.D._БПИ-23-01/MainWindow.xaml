<Window x:Class="Lab_2_AsadullinaD.D._БПИ_23_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2_AsadullinaD.D._БПИ_23_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500">
    
    <StackPanel>
        <RadioButton IsChecked="True" Margin="5" Name="Radio1">
            <WrapPanel>
                <Image Source="{Binding Image1}" Height="35" Width="300"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="a" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R1TextA" PreviewTextInput="NumberValidationTextBox"/>

                        <Label Content="f" Grid.Column="0" Grid.Row="1"/>
                        <ComboBox Grid.Column="1" Grid.Row="1" Name="R1ComboF" SelectedIndex="0"
                              ItemsSource="{Binding Listf1}"/>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio2">
            <WrapPanel>
                <Image Source="{Binding Image2}" Height="35" Width="300"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="a" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R2TextA" PreviewTextInput="NumberValidationTextBox"/>

                        <Label Content="b" Grid.Column="0" Grid.Row="1"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R2TextB" PreviewTextInput="NumberValidationTextBox"/>

                        <Label Content="f" Grid.Column="0" Grid.Row="2"/>
                        <ComboBox Grid.Column="1" Grid.Row="2" Name="R2ComboF" SelectedIndex="0"
                      ItemsSource="{Binding Listf2}"/>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

        <RadioButton Margin="5" Name="Radio3">
            <WrapPanel>
                <Image Source="{Binding Image3}" Height="35" Width="300"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="a" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R3TextA" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="b" Grid.Column="0" Grid.Row="1"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R3TextB" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="c" Grid.Column="0" Grid.Row="2"/>
                        <ComboBox Grid.Column="1" Grid.Row="2" Name="R3ComboC" SelectedIndex="0"
                              ItemsSource="{Binding Listc1}"/>

                        <Label Content="d" Grid.Column="0" Grid.Row="3"/>
                        <ComboBox Grid.Column="1" Grid.Row="3" Name="R3ComboD" SelectedIndex="0"
                              ItemsSource="{Binding Listd}"/>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>


        <RadioButton Margin="5" Name="Radio4">
            <WrapPanel>
                <Image Source="{Binding Image4}" Height="50" Width="300"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="d" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R4TextD" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="a" Grid.Column="0" Grid.Row="1"/>
                        <TextBox Text="0,00" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R4TextA" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="c" Grid.Column="0" Grid.Row="2"/>
                        <ComboBox Grid.Column="1" Grid.Row="2" Name="R4ComboC" SelectedIndex="0"
                              ItemsSource="{Binding Listc2}"/>
                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>


        <RadioButton Margin="5" Name="Radio5">
            <WrapPanel>
                <Image Source="{Binding Image5}" Height="50" Width="300"/>
                <GroupBox Header="Parameters">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="x" Grid.Column="0" Grid.Row="0"/>
                        <TextBox Text="1,0" Grid.Column="1" Grid.Row="0" MinWidth="70" Name="R5TextX" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="y" Grid.Column="0" Grid.Row="1"/>
                        <TextBox Text="1,0" Grid.Column="1" Grid.Row="1" MinWidth="70" Name="R5TextY" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="N" Grid.Column="0" Grid.Row="2"/>
                        <ComboBox Grid.Column="1" Grid.Row="2" Name="R5ComboN" SelectedIndex="0"
                              ItemsSource="{Binding ListN}"/>

                        <Label Content="K" Grid.Column="0" Grid.Row="3"/>
                        <ComboBox Grid.Column="1" Grid.Row="3" Name="R5ComboK" SelectedIndex="0"
                              ItemsSource="{Binding ListK}"/>

                        <Label Content="t" Grid.Column="0" Grid.Row="4"/>
                        <TextBox Text="1,0" Grid.Column="1" Grid.Row="4" MinWidth="70" Name="R5TextT" PreviewTextInput="NumberValidationTextBox" />

                        <Label Content="j" Grid.Column="0" Grid.Row="5"/>
                        <TextBox Text="1,0" Grid.Column="1" Grid.Row="5" MinWidth="70" Name="R5TextJ" PreviewTextInput="NumberValidationTextBox" />

                    </Grid>
                </GroupBox>
            </WrapPanel>
        </RadioButton>

        <Button Content="Считать"
            Width="100"
            Margin="10"
            HorizontalAlignment="Center"
            Click="Button_Click"/>

        <TextBlock Text="{Binding Result}" Margin="10" FontWeight="Bold" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
